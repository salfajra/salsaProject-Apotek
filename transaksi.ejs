<div class="container">
    <h3>List Transaksi</h3>
    <hr>

    <ul class="list-group">
        <% transaksi.forEach(element=> { %>
            <li class="list-group-item">
                <div class="row">
                    <!-- area no faktur -->
                    <div class="col-lg-2">
                        <small>No. Faktur</small>
                        <h5>
                            <%= element.no_faktur %>
                        </h5>
                    </div>

                    <!-- are tgl transaksi -->
                    <div class="col-lg-3">
                        <small>Tgl. Transaksi</small>
                        <h5>
                            <%= element.tgl_transaksi %>
                        </h5>
                    </div>

                    <!-- area nama customer  -->
                    <div class="col-lg-3">
                        <small>Nama Customer</small>
                        <h5>
                            <%= element.nama_customer %>
                        </h5>
                    </div>

                    <!-- area nama apoteker -->
                    <div class="col-lg-3">
                        <small>Nama Apoteker</small>
                        <h5>
                            <%= element.nama_apoteker %>
                        </h5>
                    </div>

                    <!-- area untuk menghapus -->
                    <div class="col-lg-1">
                        <a href="/transaksi/<%= element.id %>">
                            <button class="btn btn-sm btn-danger ">
                             &times;
                            </button>
                        </a>
                    </div>
                </div>

                <h5 class="mt-2">Daftar Pembelian</h5>
                <ul class="list-group">
                    <% element.detail.forEach(item => { %>
                        <li class="list-group-item">
                            <div class="row">
                                <!-- area untuk nama obat -->
                                <div class="col-lg-4">
                                    <small class="text-info">Nama Obat</small>
                                    <h6 class="fst-italic"><%= item.nama_obat %></h6>
                                </div>

                                <!-- area untuk harga -->
                                <div class="col-lg-3">
                                    <small class="text-info">Harga</small>
                                    <h6 class="fst-italic"><%= item.harga_beli %></h6>
                                </div>

                                <!-- area untuk Jumlah beli -->
                                <div class="col-lg-2">
                                    <small class="text-info">Qty</small>
                                    <h6 class="fst-italic"><%= item.jumlah_beli %></h6>
                                </div>

                                <!-- area untuk Total -->
                                <div class="col-lg-3">
                                    <small class="text-info">Total</small>
                                    <h6 class="fst-italic"><%= Number(item.jumlah_beli * item.harga_beli) %></h6>
                                </div>
                            </div>
                        </li>
                    <% }) %>
                </ul>

                
            </li>
            <% }) %>
    </ul>
</div>